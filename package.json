{
  "name": "villus-monorepo",
  "private": true,
  "packageManager": "pnpm@8.6.10",
  "scripts": {
    "docs:dev": "cd ./docs && npm run dev && cd -",
    "docs:build": "cd ./docs && npm run build && cd -",
    "docs:deploy": "./scripts/deploy-docs.sh",
    "test": "vitest",
    "test:ci": "vitest",
    "cover": "vitest run --coverage",
    "cover:ci": "vitest run --coverage",
    "lint": "eslint . '**/*.{js,jsx,ts,tsx}' --fix",
    "build": "node scripts/build.mjs",
    "postversion": "npm run build",
    "format": "prettier ./packages/**/*.ts --write"
  },
  "author": "Abdelrahman Awad <logaretm1@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/graphql": "^14.5.0",
    "@types/node-fetch": "^2.6.4",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vitest/coverage-c8": "^0.33.0",
    "@vue/compiler-sfc": "^3.3.4",
    "bundlesize": "^0.18.0",
    "chalk": "^5.3.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "fast-json-stable-stringify": "^2.1.0",
    "filesize": "^10.0.12",
    "flush-promises": "^1.0.2",
    "fs-extra": "^11.1.1",
    "graphql": "^16.8.0",
    "graphql-tag": "^2.12.6",
    "graphql-ws": "^5.14.0",
    "gzip-size": "^7.0.0",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lerna": "^7.1.5",
    "lint-staged": "^14.0.0",
    "mkdirp": "^3.0.1",
    "msw": "^1.2.3",
    "node-fetch": "^3.3.2",
    "prettier": "^3.0.2",
    "rollup": "^3.28.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-dts": "^6.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "terser": "^5.19.2",
    "typescript": "^5.1.6",
    "vitest": "^0.34.2",
    "vue": "^3.3.4",
    "wait-for-expect": "^3.0.2"
  },
  "bundlesize": [
    {
      "path": "./dist/*.min.js",
      "maxSize": "10 kB"
    }
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "vitest run related --passWithNoTests"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
